<div class="container">
	<div class="col-xs-12 col-md-8">

		<H1>Création d'une fiche client</h1>

       <%= form_tag "/client/creation/new/#{@var_id}" , method: "post" do %>
                      
                            <div class="form-group">
                                <label>Nom * </label>
                                <input type="text" name="nom" class="form-control" placeholder="Nom" >
                                <p class="help-block">Nom du propriétaire de l'entreprise</p>

                            </div>

                            <div class="form-group">
                                <label>Prénom</label>
                             <input type="text" name="prenom" class="form-control" placeholder="Prénom" >

                            </div>

                             <div class="form-group">
                                <label>Nom de l'entreprise *</label>
                                <input type="text" name="entreprise" class="form-control" placeholder="Entreprise ou Raison social" >
                            </div>

                              <div class="form-group">
                                <label>Adresse</label>
                                <input type="text" name="rue" class="form-control" placeholder="Numéro de rue + Rue de facturation" >
                            </div>

                             <div class="form-group">
                                <label>Ville</label>
                                <input type="text" name="ville" class="form-control" placeholder="Ville" >
                            </div>

                             <div class="form-group">
                                <label>Email de l'entreprise *</label>
                                <input type="email" name="email" class="form-control" placeholder="Email" >
                            </div>

                            <div class="form-group">
                                <label>Numéro de tel </label>
                                <input type="text" name="tel" class="form-control" placeholder="EX : 0613707075" >
                            </div>


                            <div class="form-group">
                                <label>Logo de l'entreprise</label>
                              <input type="file" name="avatar">
                            </div>

                            <div class="form-group">
                            <label>Description du project</label>
                            <textarea name="description" class="form-control" rows=20 >
                            </textarea>
                            </div>

          <div class="form-group">
                                <label>Type de demande</label>

                                <div class="radio">
                                    <label>
          <input type="radio" name="contrat_type" value="Création simple" checked > Création simple
                                  </label>
                                </div>

                            <div class="radio">
                                <label>                           
          <input type="radio" name="contrat_type" value="Création + hébergement"> Création avec hébergement
                                </label>
                            </div>

                                <div class="radio">
                                    <label>
         <input type="radio" name="contrat_type" value="Hébergement simple"> Hébergement simple
                                    </label>
                                </div>

          </div>

                           <input type="submit" class="btn btn-success" value="Enregister"> 
                      
            <% end %>

</div>


	<div style="clear:both;height:20px"></div>

    <a href="/" class="btn btn-primary" >Retourner à l’index</a>
</div>
</div>